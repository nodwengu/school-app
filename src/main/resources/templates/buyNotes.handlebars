{{> header.handlebars}}

<body>
<div class="container jumbotron" style="margin-top: 5rem;">
    <div class="row">
        <a href="/learner/{{learner.id}}/day/{{day.id}}/lessons" type="button" class="btn btn-primary mt-2 mr-3"> < Back </a>
    </div>
    <div class="mt-3 mb-5" style="text-align: center;">
        <h4> {{classmate.firstName}} Notes </h4>
    </div>

    <div class="row">
        <div class="card col-12 shadow-lg p-3 bg-white rounded animate__animated animate__fadeIn">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">Lesson</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Notes Title</th>
                    <th scope="col">Notes</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                    {{#each classmateNotes}}
                    <tr>
                        <td>
                            {{# lessons}}
                                {{lessonName}}
                            {{/ lessons}}
                        </td>
                        <td>
                            {{#subjects}}
                                {{subjectName}}
                            {{/subjects}}
                        </td>
                        <td>{{title}}</td>
                        <td>
                            {{notes}}
                        </td>
                        <td>
                            <a href="/learner/{{learner.id}}/day/{{day.id}}/notes/{{id}}/buy" type="submit" class="btn btn-primary btn-sm">Buy Notes</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>

</body>
