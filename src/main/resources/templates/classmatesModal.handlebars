<!-- Modal -->
<div class="modal fade" id="classmatesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">My Classmates</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card shadow-lg p-3 bg-white rounded animate__animated animate__fadeIn">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Surname</th>
                            <th scope="col">Email</th>
                            <th scope="col">Subject</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                            {{#each classmates}}
                                <tr>
                                    <td>
                                        {{firstName}}
                                    </td>
                                    <td>
                                        {{lastName}}
                                    </td>
                                    <td>{{email}}</td>
                                    <td>
                                        <div class="row">
                                            {{# subjects}}
                                                <span class="ml-2 mb-1" style="border: solid;padding: 0px 2px 0px 2px;border-radius: 10px;background: darkgoldenrod;">{{subjectName}}</span>
                                            {{/ subjects}}
                                        </div>
                                    </td>
                                    <td>
                                        <a href="/learner/{{learner.id}}/day/{{day.id}}/classmate/{{id}}/notes" type="submit" class="btn btn-primary btn-sm">View Notes</a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

