{{> header.handlebars}}

<body>
<div class="container jumbotron" style="margin-top: 5rem;">
    <div class="d-flex justify-content-end">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary mb-3 mr-3" data-toggle="modal" data-target="#exampleModal">
            Choose Subjects
        </button>

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary mb-3 mr-3 ml-3" data-toggle="modal" data-target="#exampleModal2">
            My Subjects
        </button>

        <div class="mb-3 mr-3 ml-3 d-flex ml-auto">
            <div class="input-group">
                <div class="input-group-prepend ">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Tokens: {{learner.tokens}}</span>
                </div>
                <button class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">Buy</button>
            </div>
        </div>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Select Subjects</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/day/{{day.id}}/learner/{{learner.id}}/lesson" method="post">
                    <div class="modal-body">
                        {{#each subjects}}
                            <div class="form-check" >
                                <input value="{{subjectName}}" name="{{subjectName}}" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" for="defaultCheck1">{{subjectName}}</label>
                            </div>
                        {{/each}}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Subjects</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">My Subjects</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <!--                                <th scope="col">#</th>-->
                            <th scope="col">First</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each learnerSubjects}}
                            {{# subjects}}
                                <tr>
                                    <!--                                        <th scope="row">1</th>-->
                                    <td>{{subjectName}}</td>
                                    <td><a href="/day/{{day.id}}/learner/{{learner.id}}/subject/{{id}}/delete" type="submit" class="btn btn-danger btn-sm">Remove</a></td>
                                </tr>
                            {{/ subjects}}
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div>
        {{#each learnerLessons}}
            <!--            <li>{{this}}</li>-->
        {{/each}}
        <div style="text-align: center;">
            <h3>{{day.dayName}}</h3>
            <h3>Welcome back: {{learner.firstName}}</h3>
<!--            <h4>List of Lessons</h4>-->
        </div>
        <div class="row">
            {{#each lessonsByDay}}
                <div class="col-sm-4 mt-3">
                    <span>{{this.id}}</span>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.lessonName}}</h5>
                            {{#subjects}}
                                <h6 class="card-subtitle mb-3 text-muted">Subject: {{subject_name}}</h6>
                            {{/subjects}}
                            {{#teachers}}
                                <h6 class="card-subtitle mb-3 text-muted">Teacher: {{firstName}} {{lastName}} </h6>
                            {{/teachers}}
                            <h6 class="card-subtitle mb-3 text-muted">Time: {{time}}</h6>
                            <a href="/learner/{{learner.id}}/lesson/{{this.id}}/attend" type="button" class="btn btn-primary mt-2 mb-3 mr-3">Attend Lesson</a>

                            <!--                            <a href="/learner/{{learner.id}}/lesson/{{this.id}}" type="button" class="btn btn-primary mt-2 mb-3 mr-3">Attend Lesson</a>-->
                        </div>
                    </div>
                </div>
            {{/each}}

        </div>
    </div>


</div>

</body>
</html>